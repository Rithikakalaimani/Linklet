{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A scalable URL shortener with caching, analytics, and system design best practices",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "kill-port": "lsof -ti:5002 | xargs kill -9 2>/dev/null || echo 'No process on port 5002'",
    "start-clean": "npm run kill-port && npm run dev"
  },
  "keywords": [
    "url-shortener",
    "system-design",
    "nodejs",
    "express",
    "mongodb",
    "redis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "ua-parser-js": "^1.0.37",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
